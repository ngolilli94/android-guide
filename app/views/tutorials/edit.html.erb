<%= form_with model: @tutorial, local: true do |form| %>
    <div class="field"> 
        <label> Topic: </label>
        <%= form.select :topic_id, options_for_select(@topics.collect {|t| [t.title, t.id]}, @tutorial.topic_id) %>
    </div>
    <div class="field"> 
        <label> Title: </label>
        <%= form.text_field :title %> 
    </div>
    <div class="field"> 
        <label> Definition: </label>
        <%= form.text_area :definition %> 
    </div>
    <div class="field"> 
        <label> Icon Upload: </label>
        <%= form.file_field :icon %> 
    </div>
    <div class="field"> 
        <label> File Uploads: </label>
        <%= form.file_field :figures, multiple: true %> 
    </div>
    <div class="field"> 
        <%= form.submit %> 
    </div>
<% end %>
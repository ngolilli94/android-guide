<div id="individualTutorialContainer">
    <h1> <%= @tutorial.title %> </h1>
    <% if @tutorial.figures.attached? %>
       <span> 
       <% @tutorial.figures.each do |image| %>
           <%= image_tag image %>
        <% end %> 
        </span>
    <% end %>

    <h3> <%= @tutorial.definition %> </h3>

    <% if @subtopics.exists? %>
        <ul>
        <% @subtopics.each do |subtopic| %>
                <li> <a href="/subjects/<%=subtopic.id%>"> <%= subtopic.title %> </a> <br/>

                <% if developer_signed_in? %>
                <span>
                    (<a href="/subjects/<%= subtopic.id %>/edit"> Edit </a> |
                    <%= link_to 'Delete', subject_path(subtopic), method: :delete, remote:true, data: { confirm: 'Are you sure?' } %> )
                </span>
                <% end %>

                </li>
        <% end %>
        </ul>
    <% end %>

    <% if developer_signed_in? %>
            <span>
                (<a href="/tutorials/<%= @tutorial.id %>/edit"> Edit </a> |
                <%= link_to 'Delete', tutorial_path(@tutorial), method: :delete, remote:true, data: { confirm: 'Are you sure?' } %> )
            </span>
            <% end %>
    <%= link_to 'Back', :back %>
</div>

<div class="android-guide">
        <div class="speech-bubble">
            <p> <a href="/topics"> Tap here to go back to the main page! </a> </p>
        </div>
        <a href="/topics"> <%= image_tag "android-guide-II.png" %> </a>
</div>


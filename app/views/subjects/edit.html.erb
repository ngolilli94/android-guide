<%= form_with model: @subject, local: true do |form| %>
    <div class="field"> 
        <label> Tutorial: </label>
        <%= form.select :tutorial_id, options_for_select(@tutorials.collect {|t| [t.title, t.id]}, @subject.tutorial_id) %> 
    </div>
    <div class="field"> 
        <label> Title: </label>
        <%= form.text_field :title %> 
    </div>
    <div class="field"> 
        <label> Definition: </label>
        <%= form.text_area :definition %> 
    </div>
    <div class="field"> 
        <label> File Uploads: </label>
        <%= form.file_field :figures, multiple: true %> 
    </div>
    <div class="field"> 
        <%= form.submit %> 
    </div>
<% end %>